<h1>Weather Logger</h1>
<p>In this page you can follow the behavior of weather in any place in the world.</p>
<%= link_to 'New location', new_location_path %>

<h2> Locations </h2>

<div class="table-responsive">
	<table class="table text-center table-bordered table-hover table-secondary table-striped text-dark">
		<thead class="thead-secondary">
			<tr>
				<th>Name</th>
				<th>City</th>
				<th>Department</th>
				<th>Geographic coordinates</th>
				<th>Elevation</th>
				<th colspan=2>Actions</th>
			</tr>
		</thead>

		<tbody>
			<% @locations.each do |loc| %>
				<tr>
					<td>
						<%= link_to loc.name.empty? ? loc.city : loc.name, location_path(loc)%>
					</td>
					<td><%= loc.city %></td>
					<td><%= loc.department %></td>
					<td><%= loc.latitude %>, <%= loc.longitude %></td>
					<td><%= loc.elevation %>m</td>
					<td><%= link_to 'Edit', edit_location_path(loc) %></td>
					<td><%= link_to 'Delete', location_path(loc),
							method: :delete,
							data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>