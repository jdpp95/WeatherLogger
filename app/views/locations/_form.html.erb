<%= form_for (@location) do |form| %>

  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:
      </h2>
      <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <li> <%= msg %> </li>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

    <div class="col-sm-4"></div>

    <div class="col-sm-4">

      <div class="form-group">
        <div class="input-group-prepend">
          <%= form.label :name, class: "input-group-text mr-2" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>

    	<div class="form-group">
        <div class="input-group-prepend">
      		<%= form.label :city, class: "input-group-text mr-2" %>
          <%= form.text_field :city, class: "form-control" %>
        </div>
      </div>
     
      <div class="form-group">
        <div class="input-group-prepend">
          <%= form.label :department, class: "input-group-text mr-2" %>
          <%= form.text_field :department, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group-prepend">
          <%= form.label :latitude, class: "input-group-text mr-2" %>
          <%= form.text_field :latitude, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group-prepend">
          <%= form.label :longitude, class: "input-group-text mr-2" %>
          <%= form.text_field :longitude, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group-prepend">
          <%= form.label :elevation, class: "input-group-text mr-2" %>
          <%= form.text_field :elevation, class: "form-control" %>
        </div>
      </div>

      <br>
 
      <div class="form-group">
        <%= form.submit class: "btn btn-success" %>
      </div>

    </div>

  </div>

  <% end %>